--lua
os.loadAPI('rom/luo/api') ; for k , v in pairs(api) do loadstring(string.format("%s = api.%s" , k , k))() end ;

args = {...} ;
if #args < 1 or #args > 2 then
	print("useage: digAll types [maxdis]") ;
else
	local s = slot.firstnSlots(tonumber(args[1])) ;
	local slots = {[1] = {'fuel'}} ;
	for k , v in ipairs(s) do
		slots[v] = {'something-'..k} ;
	end
	slot.checkList(slots) ;
	if #args == 1 then
		link(digAll(s , 20)) ;
	else
		link(digAll(s , tonumber(args[2]))) ;
	end ;
end ;

